// Typography
// ==============


html
  font-size 8px
  @media screen and (min-width $screen-xxlarge)
    font-size 9px
  @media screen and (min-width $screen-xxxlarge)
    font-size 10px

body
  color $grey
  font 2.5rem/1.5 'Open Sans', sans-serif
  font-style normal
  font-weight 400
  -moz-osx-font-smoothing grayscale
  -webkit-font-smoothing antialiased
  text-size-adjust none

h1
h2
h3
h4
h5
h6
  margin-top 0
  margin-bottom 2rem
  font-style normal
  font-weight 400
  line-height 1
  &:only-child
    margin-bottom 3rem

h1
  font-size 6rem
  line-height 7rem

h2
  font-size 5rem
  line-height 6rem

h3
  font-size 4rem
  line-height 5rem

h4
  font-size 3rem
  line-height 4rem
    
h5
  font-size 2.5rem
  line-height 3rem

h6
  font-size 2rem
  line-height 3rem

p
  margin-top 0
  margin-bottom $content-margin

ul
ol
  padding 0
  margin-top 0
  margin-bottom $content-margin
  margin-left $content-margin
  
blockquote
  font-size 3rem
  font-weight 400
  font-style italic
  text-align center
  line-height 4rem
  box-sizing border-box

strong
  font-weight 700

cite
  margin 0

pre
  font-style normal
  font-weight 400

code
  font-family 'Anonymous Pro', sans-serif

a
  color $green
  text-decoration none
  transition $fast-ease-in
  &:hover
    color $green-light

ul
  list-style-type disc
  ul
    list-style-type circle
    ul
      list-style-type square

ol
  list-style-type decimal
  ol
    list-style-type lower-alpha
    ol
      list-style-type lower-roman

li > ul
li > ol
  margin-bottom 0

hr
  display block
  height 0
  margin 1.5rem 0
  padding 0
  border 0
  border-top 1px solid $grey-medium