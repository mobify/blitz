// Global
// ==============


html
  height 100%

html
body
  min-height 100%

body
  display flex
  flex-direction column
  margin 0
  background rgb(255,255,255)

body *
  box-sizing border-box

img
  display block
  width 100%
  height auto
  min-height 25%
  margin-bottom 3rem
  background $grey-light
  &.-span
    margin 0

.-color-free
  color $green-dark

.-color-occupied
  color $red-dark